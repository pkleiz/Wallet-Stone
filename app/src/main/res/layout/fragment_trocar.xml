<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.TrocarFragment">

    <Button
        android:id="@+id/trocar_confirmar"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:background="#24B34D"
        android:text="@string/confirmar"
        android:textColor="#FEFFFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/trocar_linhaValorDisponivel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:contentDescription="TODO"
        android:tint="#F5181616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trocar_valorDisponivel"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/trocar_reaisTopo"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/trocar_valorDisponivel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trocar_valorDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="100.000,00"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trocar_textoValordisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:gravity="center"
        android:text="valor disponível para \n aplicação"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trocar_valorDisponivel" />

    <ImageView
        android:id="@+id/trocar_logoStone"
        android:layout_width="138dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stone_pagamentos" />

    <ImageView
        android:id="@+id/trocar_retanguloBitcoin"
        android:layout_width="360dp"
        android:layout_height="148dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trocar_logoStone"
        app:srcCompat="@drawable/ic_retangulo_fundo" />

    <ImageView
        android:id="@+id/trocar_linhaBitcoin"
        android:layout_width="340dp"
        android:layout_height="5dp"
        android:layout_marginTop="60dp"
        android:contentDescription="TODO"
        android:tint="#00858383"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/trocar_valorCompradoBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:text="@string/comp"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBitcoin" />

    <ImageView
        android:id="@+id/trocar_bitcoinLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin"
        app:srcCompat="@drawable/ic_bitcoin" />

    <TextView
        android:id="@+id/trocar_quantidadeDeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="3"
        android:textColor="#F8161515"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/trocar_bitcoinLogo"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin" />

    <TextView
        android:id="@+id/trocar_reaisBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/trocar_quantidadeDeBitcoin"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin" />

    <TextView
        android:id="@+id/trocar_dinheiroCompradoBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="15.754,50"
        app:layout_constraintStart_toEndOf="@+id/trocar_valorCompradoBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBitcoin" />

    <TextView
        android:id="@+id/trocar_unitarioBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin" />

    <TextView
        android:id="@+id/trocar_quantidadeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/quantidade"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBitcoin" />

    <EditText
        android:id="@+id/trocar_numeroVendaBitcoin"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintStart_toEndOf="@+id/trocar_quantidadeBitcoin" />

    <TextView
        android:id="@+id/trocar_palavraBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="20dp"
        android:text="Bitcoin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBitcoin" />

    <TextView
        android:id="@+id/trocar_quantoValeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:text="20.691,40"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/trocar_reaisBitcoin"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBitcoin" />

    <TextView
        android:id="@+id/trocar_palavraUnitárioBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBitcoin" />

    <ImageView
        android:id="@+id/trocar_retanguloBrita"
        android:layout_width="360dp"
        android:layout_height="148dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trocar_retanguloBitcoin"
        app:srcCompat="@drawable/ic_retangulo_fundo" />

    <ImageView
        android:id="@+id/trocar_linhaBrita"
        android:layout_width="340dp"
        android:layout_height="5dp"
        android:layout_marginTop="60dp"
        android:contentDescription="TODO"
        android:tint="#00858383"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBrita"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/trocar_valorCompradoBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:text="@string/comp"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBrita"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBrita" />

    <TextView
        android:id="@+id/trocar_quantidadeDeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="1200000"
        android:textColor="#F8161515"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/trocar_britaLogo"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita" />

    <TextView
        android:id="@+id/trocar_reaisBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/trocar_quantidadeDeBrita"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita" />

    <TextView
        android:id="@+id/trocar_dinheiroCompradoBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="4,25"
        app:layout_constraintStart_toEndOf="@+id/trocar_valorCompradoBrita"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBrita" />

    <TextView
        android:id="@+id/trocar_unitarioBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita" />

    <TextView
        android:id="@+id/trocar_quantidadeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/quantidade"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBrita"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBrita" />

    <EditText
        android:id="@+id/trocar_numeroVendaBrita"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBrita"
        app:layout_constraintStart_toEndOf="@+id/trocar_quantidadeBrita" />

    <TextView
        android:id="@+id/trocar_palavraBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="20dp"
        android:text="Brita"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/trocar_retanguloBrita"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBrita" />

    <TextView
        android:id="@+id/trocar_quantoValeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:text="4,40"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/trocar_reaisBrita"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita" />

    <TextView
        android:id="@+id/trocar_palavraUnitárioBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        app:layout_constraintEnd_toEndOf="@+id/trocar_retanguloBrita"
        app:layout_constraintTop_toBottomOf="@+id/trocar_linhaBrita" />

    <TextView
        android:id="@+id/trocar_britaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#00070707"
        android:text="@string/brita"
        android:textColor="#161616"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/trocar_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/trocar_retanguloBrita" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exchange_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/trocar_retanguloBrita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trocar_retanguloBitcoin" />

</android.support.constraint.ConstraintLayout>