        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBrita"
        app:layout_constraintTop_toBottomOf="@+id/vendas_linhaBrita" />

    <TextView
        android:id="@+id/vendas_quantidadeDeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="58dp"
        android:text="1200000"
        android:textColor="#F8161515"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/vendas_britaLogo"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_reaisBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/vendas_quantidadeDeBrita"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_dinheiroCompradoBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="4,25"
        app:layout_constraintStart_toEndOf="@+id/vendas_valorCompradoBrita"
        app:layout_constraintTop_toBottomOf="@+id/vendas_linhaBrita" />

    <TextView
        android:id="@+id/vendas_unitarioBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_quantidadeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="28dp"
        android:text="@string/quantidade"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBrita"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBrita" />

    <EditText
        android:id="@+id/vendas_numeroVendaBrita"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBrita"
        app:layout_constraintStart_toEndOf="@+id/vendas_quantidadeBrita" />

    <TextView
        android:id="@+id/vendas_palavraBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="28dp"
        android:text="Brita"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBrita"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_quantoValeBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="65dp"
        android:text="4,40"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vendas_reaisBrita"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_britaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:shadowColor="#00070707"
        android:text="@string/brita"
        android:textColor="#161616"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita" />

    <TextView
        android:id="@+id/vendas_palavraUnitárioBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBrita"
        app:layout_constraintTop_toBottomOf="@+id/vendas_linhaBrita" />


    <TextView
        android:id="@+id/vendas_total"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/total"
        android:textColor="#111010"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_valorTotal"
        app:layout_constraintEnd_toStartOf="@+id/vendas_linhaInferiorConfirmar" />

    <Button
        android:id="@+id/vendas_confirmar"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:background="#24B34D"
        android:text="@string/confirmar"
        android:textColor="#FEFFFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vendas_valorTotal"
        android:layout_width="31dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="10"
        android:textColor="#090808"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/vendas_linhaInferiorConfirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
