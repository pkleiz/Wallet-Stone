        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin" />

    <TextView
        android:id="@+id/vendas_quantidadeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="28dp"
        android:text="@string/quantidade"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBitcoin" />

    <EditText
        android:id="@+id/vendas_numeroVendaBitcoin"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintStart_toEndOf="@+id/vendas_quantidadeBitcoin" />

    <TextView
        android:id="@+id/vendas_palavraBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="28dp"
        android:text="Bitcoin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBitcoin" />

    <TextView
        android:id="@+id/vendas_quantoValeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="65dp"
        android:text="20.691,40"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vendas_reaisBitcoin"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin" />

    <TextView
        android:id="@+id/vendas_palavraUnitárioBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unitario"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/vendas_linhaBitcoin" />


    <ImageView
        android:id="@+id/vendas_retanguloBrita"
        android:layout_width="360dp"
        android:layout_height="186dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendas_retanguloBitcoin"
        app:srcCompat="@drawable/ic_retangulo_vender" />

    <ImageView
        android:id="@+id/vendas_linhaBrita"
        android:layout_width="340dp"
        android:layout_height="5dp"
        android:layout_marginTop="84dp"
        android:contentDescription="TODO"
        android:tint="#00858383"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBrita"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBrita"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBrita"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/vendas_valorCompradoBrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
