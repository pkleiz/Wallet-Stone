    <ImageView
        android:id="@+id/vendas_linhaValorDisponivel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:contentDescription="TODO"
        android:tint="#F5181616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendas_valorDisponivel"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/vendas_linhaInferiorConfirmar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
