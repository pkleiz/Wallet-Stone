        android:tint="#00858383"
        app:layout_constraintEnd_toEndOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin"
