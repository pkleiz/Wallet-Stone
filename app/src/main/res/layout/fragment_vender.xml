        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/vendas_valorCompradoBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:text="@string/comp"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/vendas_linhaBitcoin" />

    <ImageView
        android:id="@+id/vendas_bitcoinLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/vendas_retanguloBitcoin"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin"
        app:srcCompat="@drawable/ic_bitcoin" />

    <TextView
        android:id="@+id/vendas_quantidadeDeBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="58dp"
        android:text="3"
        android:textColor="#F8161515"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/vendas_bitcoinLogo"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin" />

    <TextView
        android:id="@+id/vendas_reaisBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/vendas_quantidadeDeBitcoin"
        app:layout_constraintTop_toTopOf="@+id/vendas_retanguloBitcoin" />

    <TextView
        android:id="@+id/vendas_dinheiroCompradoBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
