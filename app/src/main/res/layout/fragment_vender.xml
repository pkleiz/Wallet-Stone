        android:tint="#F5181616"
        app:layout_constraintBottom_toTopOf="@+id/vendas_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_linha_reta"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/vendas_reaisTopo"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/vendas_valorDisponivel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vendas_rsTotal"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/money"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vendas_linhaInferiorConfirmar"
        app:layout_constraintStart_toEndOf="@+id/vendas_total" />

    <TextView
        android:id="@+id/vendas_valorDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="100.000,00"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vendas_textoValordisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:gravity="center"
        android:text="valor disponível para \n aplicação"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendas_valorDisponivel" />

    <ImageView
        android:id="@+id/vendas_logoStone"
        android:layout_width="138dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stone_pagamentos" />

    <ImageView
        android:id="@+id/vendas_retanguloBitcoin"
        android:layout_width="360dp"
        android:layout_height="186dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendas_logoStone"
        app:srcCompat="@drawable/ic_retangulo_vender" />

    <ImageView
        android:id="@+id/vendas_linhaBitcoin"
        android:layout_width="340dp"
        android:layout_height="5dp"
        android:layout_marginTop="84dp"
